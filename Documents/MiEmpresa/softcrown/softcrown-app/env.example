# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NEXT_PUBLIC_APP_NAME=SoftCrown
NEXT_PUBLIC_APP_DESCRIPTION=Contact & Lead Management App

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# EmailJS Configuration
NEXT_PUBLIC_EMAILJS_SERVICE_ID=service_xxxxxxx
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=template_xxxxxxx
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=xxxxxxxxxxxxxxxx
EMAILJS_PRIVATE_KEY=xxxxxxxxxxxxxxxx

# Payment Gateways
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxx
NEXT_PUBLIC_PAYPAL_CLIENT_ID=xxxxxxxxxxxxxxxx
PAYPAL_CLIENT_SECRET=xxxxxxxxxxxxxxxx

# CRM Integrations
NEXT_PUBLIC_HUBSPOT_API_KEY=xxxxxxxxxxxxxxxx
HUBSPOT_PRIVATE_APP_TOKEN=xxxxxxxxxxxxxxxx
NEXT_PUBLIC_SALESFORCE_CLIENT_ID=xxxxxxxxxxxxxxxx
SALESFORCE_CLIENT_SECRET=xxxxxxxxxxxxxxxx
SALESFORCE_USERNAME=your-email@company.com
SALESFORCE_PASSWORD=your-password
SALESFORCE_SECURITY_TOKEN=xxxxxxxxxxxxxxxx

# Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=xxxxxxxxxxxxxxxx
VAPID_PRIVATE_KEY=xxxxxxxxxxxxxxxx
VAPID_SUBJECT=mailto:your-email@company.com

# AI Chat Configuration (Optional)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxx
AI_PROVIDER=local # local, openai, anthropic

# Database (if needed for advanced features)
DATABASE_URL=postgresql://username:password@localhost:5432/softcrown
REDIS_URL=redis://localhost:6379

# Security
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=https://your-domain.vercel.app

# External Services
WEBHOOK_SECRET=your-webhook-secret
ENCRYPTION_KEY=your-encryption-key

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false
